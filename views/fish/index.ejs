<%- include('../partials/header') %>

<nav id="categories-nav">
  <a href="/fish?category=goldfish-koi" <%- title.slice(10) === 'GOLDFISH-KOI'.toLowerCase() ? 'class="active"' : '' %>>GOLDFISH/KOI</a>
  <a href="/fish?category=community"<%- title.slice(10) === 'COMMUNITY'.toLowerCase() ? 'class="active"' : '' %> >COMMUNITY</a>
  <a href="/fish?category=cichlids" <%- title.slice(10) === 'CICHLIDS'.toLowerCase() ? 'class="active"' : '' %>>CICHLIDS</a>
  <a href="/fish?category=specialty" <%- title.slice(10) === 'SPECIALTY'.toLowerCase() ? 'class="active"' : '' %>>SPECIALTY</a>
</nav>
<hr>

<!-- <p><%= title %></p> -->


<table id="list">
  <thead>
    <tr>
      <th>Fish</th>
      <th>Description</th>
      <th>Image</th>
      <th>More Info</th>
    </tr>
  </thead>
  <tbody>
    <% fishs.forEach(function(f) { %>
      <tr>
        <td><%= f.name %></td>
        <td><%= f.description %></td>
        <td><img class="fish-image-index" src="<%= f.image %>" alt="Image of <%= f.name %>"></td>
        <!-- <td><a href="/fish/<%= f._id %>">DETAILS</a></td> -->
        <td>
          <form action="/fish/<%= f._id %>" method="GET">
            <button class="btn btn-outline-dark">DETAILS</button>
          </form>
        </td>
      </tr>
    <% }); %>
    </tbody>
</table>
    


<%- include('../partials/footer') %>