<%- include('../partials/header') %>

<h1 style="text-align: center;"><%= title %></h1>

<div class="d-flex input-group justify-content-center">
  <form id="new-form" action="/fish" method="POST">
    <label>Name:</label>
    <input type="text" name="name" class="form-control"><br>
    <label>Image URL (imgur):</label>
    <input type="text" name="image" class="form-control"><br>
    <label>Description:</label>
    <input type="text" name="description" class="form-control"><br>
    <label>Tank Type:</label>
    <!-- <select name="category">
      <option value="goldfish-koi">GOLDFISH/KOI</option>
      <option value="community">COMMUNITY</option>
      <option value="cichlids">CICHLIDS</option>
      <option value="specialty">SPECIALTY</option>
    </select><br> -->
    <select name="category" class="form-select">
      <% validCategories.forEach(function(category, idx) { %>
        <option value="<%= category %>" <%= idx === 0 ? 'selected' : ''%>>
            <%= category %>
        </option>
      <% }) %>
    </select><br>
    <!-- <label>Comptabile Fish (separate fish with commas):</label>
    <input type="text" name="comptabile"><br> -->
    <label>Gallons per Fish:</label>
    <input type="text" name="galPerFish" class="form-control"><br>
    <input type="submit" value="Add Fish" class="btn btn-outline-info">
  </form>
</div>

<img src="/images/eggs.png" alt="fish eggs" style="width: 35%;display:block;margin-left: auto;margin-right: auto;margin-top: 60px;">

<%- include('../partials/footer') %>